@model Obligatorio_Programacion_3.Models.PedidoViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>PedidoViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("Create", "Pedido", FormMethod.Post))
        {
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="ClienteId" class="control-label"></label>
                <select asp-for="ClienteId" class="form-control" asp-items="@ViewBag.Clientes"></select>
                <span asp-validation-for="ClienteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaEntrega" class="control-label"></label>
                <input asp-for="FechaEntrega" class="form-control" />
                <span asp-validation-for="FechaEntrega" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="ArticuloId" class="control-label"></label>
                <select asp-for="ArticuloId" class="form-control" asp-items="@ViewBag.Articulos"></select>
                <span asp-validation-for="ArticuloId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CantidadArticulo" class="control-label"></label>
                <input asp-for="CantidadArticulo" class="form-control" />
                <span asp-validation-for="CantidadArticulo" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsEnvioExpress" /> @Html.DisplayNameFor(model => model.IsEnvioExpress)
                </label>
            </div>

            <p class="text-danger">@ViewBag.Mensaje</p>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        }
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
}